{
    "name": "rcalicdan/blade",
    "description": "A standalone fork of jenssegers/blade, Laravel's Blade templating engine for use outside of Laravel. This maintained version includes fixes for modern PHP environments.",
    "keywords": [
        "laravel",
        "blade",
        "template",
        "view",
        "render"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://jenssegers.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/view": "^9.0|^10.0|^11.0",
        "illuminate/config": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "Rcalicdan\\Blade\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/pint --test",
        "fix": "vendor/bin/pint"
    }
}